<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_top_rounded_16"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_logo_smp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                style="@style/workSansSemiBold"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="PERPUSTAKAAN UPT SMPN 1 PAINAN\nTAHUN AJARAN 2022/2023"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/logo"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address"
                style="@style/workSansRegular"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Jl. Sutan Syahrir, Painan, Kec. Iv Jurai, Kabupaten Pesisir Selatan, Sumatera Barat 25651"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@+id/title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            style="@style/Devider"
            android:layout_marginTop="8dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_tv"
            style="@style/workSansMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Surat Keterangan Bebas Pustaka"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description_tv"
            style="@style/workSansRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Perpustakaan SMP N 1 Painan Menyatakan bahwa:"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/workSansRegular"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:lineSpacingExtra="4dp"
                android:text="Nama"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/workSansRegular"
                android:layout_width="8dp"
                android:lineSpacingExtra="4dp"
                android:text=":"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name_value_tv"
                style="@style/workSansRegular"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_weight="5"
                android:lineSpacingExtra="4dp"
                android:text="Fajri Rahmadi Yang Panjang Sekali"
                android:textColor="@color/black" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/noTv"
                style="@style/workSansRegular"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:lineSpacingExtra="4dp"
                android:text="NIS"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/workSansRegular"
                android:layout_width="8dp"
                android:lineSpacingExtra="4dp"
                android:text=":"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nis_value_tv"
                style="@style/workSansRegular"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_weight="5"
                android:lineSpacingExtra="4dp"
                android:text="19209"
                android:textColor="@color/black" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/kelas_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/workSansRegular"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:lineSpacingExtra="4dp"
                android:text="Kelas"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/workSansRegular"
                android:layout_width="8dp"
                android:lineSpacingExtra="4dp"
                android:text=":"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/kelas_value_tv"
                style="@style/workSansRegular"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_weight="5"
                android:lineSpacingExtra="4dp"
                android:text="VII 7"
                android:textColor="@color/black" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/workSansRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="4dp"
            android:text="Siswa tersebut di atas tidak mempunyai pinjaman pustaka milik SMP N 1 Painan.\nSurat keterangan ini untuk Ujian, Kelulusan, dan Pengambilan Ijazah."
            android:textColor="@color/black"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sign_tv"
            style="@style/workSansRegular"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:text="Painan, 22 November 2022\n\n\n\nFajri Rahmadi Namanya panjang sekali"
            android:textColor="@color/black" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cetak_btn"
        style="@style/primaryButton"
        android:layout_margin="16dp"
        android:text="Cetak" />

</androidx.appcompat.widget.LinearLayoutCompat>